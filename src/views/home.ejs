<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>todoApp</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="main">
        <%- include('./partials/flash') %>
        <h1>ToDo</h1>
        <form action="/items/register" method="POST">
            <label for="name">名前:</label>
            <input type="text" id="name" name="name" required>
            <button type="submit">登録</button>
        </form>
        <ul>
            <% items.forEach(function(item) { %>
                <li class="item">
                    <div class="item-name">
                        <%= item.name %><%= item.done ? ' - ✅' : '' %>
                    </div>
                    <form action="/items/modify/<%= item.id %>" method="GET" style="display:inline">
                        <button type="submit">編集</button>
                    </form>
                    <form action="/items/delete/<%= item.id %>" method="POST" style="display:inline;">
                        <button class="danger" type="submit">削除</button>
                    </form>
                    <form action="/items/complete/<%= item.id %>" method="POST" style="display:inline;">
                        <button class="primary" type="submit">完了</button>
                    </form>
                </li>
            <% }); %>
        </ul>
    </div>
</body>
</html>